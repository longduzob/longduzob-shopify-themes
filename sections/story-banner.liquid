<section class="section">
  <div class="container story">
    <div>
      <span class="eyebrow">{{ section.settings.kicker }}</span>
      <h3>{{ section.settings.title }}</h3>
      <p>{{ section.settings.text }}</p>
      <div class="hero__actions">
        <a class="btn btn-primary" href="{{ section.settings.link }}">{{ section.settings.link_text }}</a>
      </div>
    </div>
    <div class="story__stats">
      {% for block in section.blocks %}
        <div class="stat">
          <strong>{{ block.settings.stat }}</strong>
          <p>{{ block.settings.label }}</p>
        </div>
      {% else %}
        <div class="stat"><strong>98%</strong><p>Clients satisfaits</p></div>
        <div class="stat"><strong>+45%</strong><p>Panier moyen grâce aux bundles</p></div>
        <div class="stat"><strong>24/48h</strong><p>Expédition rapide</p></div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Story / garantie",
  "settings": [
    {"type": "text", "id": "kicker", "label": "Kicker", "default": "Manifesto"},
    {"type": "text", "id": "title", "label": "Titre", "default": "Le terrain dicte nos choix"},
    {"type": "textarea", "id": "text", "label": "Texte", "default": "Une boutique pensée par et pour les passionnés d'outdoor, avec une logique conversion pour dropshipping."},
    {"type": "url", "id": "link", "label": "Lien CTA", "default": "/pages/about"},
    {"type": "text", "id": "link_text", "label": "Texte CTA", "default": "Voir nos garanties"}
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Statistique",
      "settings": [
        {"type": "text", "id": "stat", "label": "Chiffre", "default": "+99%"},
        {"type": "text", "id": "label", "label": "Texte", "default": "Preuve sociale"}
      ]
    }
  ],
  "presets": [{"name": "Story / garantie"}]
}
{% endschema %}
