<footer class="footer">
  <div class="container footer__grid">
    <div>
      <div class="logo">{{ settings.logo_text | default: shop.name }}</div>
      <p>{{ section.settings.tagline }}</p>
      <p class="footer__contact">
        <svg viewBox="0 0 24 24" aria-hidden="true"><path d="M4 5h16a2 2 0 0 1 2 2v10.5A1.5 1.5 0 0 1 20.5 19h-17A1.5 1.5 0 0 1 2 17.5V7a2 2 0 0 1 2-2Zm0 2v.3l8 4.7 8-4.7V7Z"/></svg>
        {{ shop.email }}
      </p>
      {% render 'social-links', class: 'footer__social', stacked: true %}
    </div>
    <div>
      <h4>Boutique</h4>
      <a href="/collections/all">Tous les produits</a><br>
      <a href="/collections/nouveautes">Nouveautés</a><br>
      <a href="/collections/promos">Promotions</a>
    </div>
    <div>
      <h4>Infos</h4>
      <a href="/pages/about">Notre histoire</a><br>
      <a href="/pages/shipping">Livraison & retours</a><br>
      <a href="/pages/faq">FAQ</a>
    </div>
    <div>
      <h4>Réseaux</h4>
      {% render 'social-links' %}
    </div>
  </div>
  <div class="container footer__bottom">
    <span>© {{ 'now' | date: '%Y' }} {{ shop.name }}</span>
    <span>{{ section.settings.bottom }}</span>
  </div>
</footer>

{% schema %}
{
  "name": "Pied de page",
  "settings": [
    {"type": "textarea", "id": "tagline", "label": "Texte", "default": "Votre camp de base pour l'outdoor et le bushcraft."},
    {"type": "text", "id": "bottom", "label": "Mention bas de page", "default": "Paiements sécurisés • Satisfait ou remboursé"}
  ],
  "presets": [{"name": "Pied de page"}]
}
{% endschema %}
