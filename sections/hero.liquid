<section class="hero">
  <div class="container hero__grid">
    <div class="hero__content">
      <span class="eyebrow">{{ section.settings.kicker }}</span>
      <h1>{{ section.settings.title }}</h1>
      <p>{{ section.settings.subtitle }}</p>
      <div class="hero__badges">
        <span class="badge">Matériel bushcraft testé terrain</span>
        <span class="badge">Expédition 24/48h</span>
        <span class="badge">Paiements 100% sécurisés</span>
      </div>
      <div class="hero__actions">
        <a class="btn btn-primary" href="{{ section.settings.primary_link }}">{{ section.settings.primary_label }}</a>
        <a class="btn btn-ghost" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_label }}</a>
      </div>
    </div>
    <div class="hero__card">
      <div>
        <strong>{{ section.settings.side_title }}</strong>
        <small>{{ section.settings.side_copy }}</small>
      </div>
      <div>
        <strong>{{ section.settings.side_stat }}</strong>
        <small>clients prêts pour l'aventure</small>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero conversion",
  "settings": [
    {"type": "text", "id": "kicker", "label": "Kicker", "default": "Bushcraft premium"},
    {"type": "text", "id": "title", "label": "Titre", "default": "Prépare ta prochaine sortie avec un setup prêt à vendre"},
    {"type": "textarea", "id": "subtitle", "label": "Sous-titre", "default": "Un thème Shopify optimisé conversion avec storytelling outdoor, badges de confiance et sections 100% éditables."},
    {"type": "text", "id": "primary_label", "label": "CTA principal", "default": "Voir les best-sellers"},
    {"type": "url", "id": "primary_link", "label": "Lien CTA principal", "default": "/collections/all"},
    {"type": "text", "id": "secondary_label", "label": "CTA secondaire", "default": "Découvrir la collection nature"},
    {"type": "url", "id": "secondary_link", "label": "Lien CTA secondaire", "default": "/collections"},
    {"type": "text", "id": "side_title", "label": "Bloc latéral titre", "default": "Kit Outdoor complet"},
    {"type": "text", "id": "side_copy", "label": "Bloc latéral texte", "default": "Sac 60L, tarp, kit feu, couteau carbone, filtre eau."},
    {"type": "text", "id": "side_stat", "label": "Bloc latéral chiffre", "default": "+12k"}
  ],
  "presets": [{"name": "Hero conversion"}]
}
{% endschema %}
