{% comment %}
  Collection Banner Section
{% endcomment %}

<style>
  .collection-banner {
    position: relative;
    background-color: var(--color-forest-green);
    padding: var(--spacing-2xl) 0;
    text-align: center;
    overflow: hidden;
  }

  .collection-banner__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
  }

  .collection-banner__content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    padding: 0 var(--spacing-md);
    color: var(--color-white);
  }

  .collection-banner__title {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .collection-banner__description {
    font-size: 1.125rem;
    line-height: 1.6;
    opacity: 0.95;
  }

  @media (max-width: 768px) {
    .collection-banner__title {
      font-size: 2rem;
    }
  }
</style>

<div class="collection-banner">
  {%- if collection.image -%}
    <img src="{{ collection.image | image_url: width: 1920 }}" 
         alt="{{ collection.title }}" 
         class="collection-banner__image">
  {%- endif -%}
  
  <div class="collection-banner__content">
    <h1 class="collection-banner__title">{{ collection.title }}</h1>
    {%- if collection.description != blank and section.settings.show_collection_description -%}
      <div class="collection-banner__description">
        {{ collection.description }}
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Banni√®re Collection",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_collection_description",
      "label": "Afficher la description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_collection_image",
      "label": "Afficher l'image",
      "default": true
    }
  ]
}
{% endschema %}
