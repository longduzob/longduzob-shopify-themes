<section class="section">
  <div class="container newsletter">
    <div class="section-header" style="text-align:left;">
      <span class="eyebrow">{{ section.settings.kicker }}</span>
      <h2>{{ section.settings.title }}</h2>
      <p>{{ section.settings.subtitle }}</p>
    </div>
    <form action="/contact#ContactFooter" method="post" accept-charset="UTF-8" class="Newsletter" id="NewsletterFooter">
      <input type="hidden" name="form_type" value="customer" />
      <input type="hidden" name="utf8" value="✓" />
      <input type="email" name="contact[email]" aria-label="Email" placeholder="{{ section.settings.placeholder }}" required>
      <button type="submit" class="btn btn-primary">{{ section.settings.button }}</button>
    </form>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {"type": "text", "id": "kicker", "label": "Kicker", "default": "Captation"},
    {"type": "text", "id": "title", "label": "Titre", "default": "Garde le contact"},
    {"type": "textarea", "id": "subtitle", "label": "Sous-titre", "default": "Envoie des guides et offres privées pour convertir après clic pub."},
    {"type": "text", "id": "placeholder", "label": "Placeholder", "default": "ton@email.com"},
    {"type": "text", "id": "button", "label": "Bouton", "default": "Rejoindre"}
  ],
  "presets": [{"name": "Newsletter"}]
}
{% endschema %}
